<div class="skill-check-dialog">
    <div class="dialog-content">
        <!-- Left Column -->
        <div class="dialog-column">
            <h2>Selected Contestants</h2>
            <div class="form-group">
                <label>Search</label>
                <div class="form-fields">
                    <input type="text" name="search" placeholder="Search players...">
                </div>
            </div>
            <div class="filter-buttons">
                <button type="button" class="filter-btn" data-filter="selected">
                    <i class="fas fa-user"></i> Selected
                </button>
                <button type="button" class="filter-btn" data-filter="canvas">
                    <i class="fas fa-users"></i> Canvas
                </button>
                <button type="button" class="filter-btn" data-filter="party">
                    <i class="fas fa-flag"></i> Party
                </button>
            </div>
            <div class="actor-list">
                {{#each actors}}
                    {{#if this.hasOwner}}
                        <div class="actor-item" data-actor-id="{{this.id}}">
                            <img src="{{this.actor.img}}" alt="{{this.name}}">
                            <div class="actor-details">
                                <div class="actor-name">{{this.name}}</div>
                                <div class="actor-info">Level {{this.actor.system.details.level}} {{this.actor.system.details.class}}</div>
                                <div class="actor-info">HP: {{this.actor.system.attributes.hp.value}}/{{this.actor.system.attributes.hp.max}}</div>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>

        <!-- Middle Column -->
        <div class="dialog-column">
            <h2>Available Skills</h2>
            <div class="form-group">
                <label>Criteria</label>
                <div class="form-fields">
                    <input type="text" name="search" placeholder="Search skills...">
                </div>
            </div>
            <div class="skills-list">
                {{#each skills}}
                    <div class="skill-item {{#if this.selected}}selected{{/if}}" data-skill="{{this.id}}">
                        <i class="{{this.icon}}"></i>
                        <span>{{this.name}}</span>
                    </div>
                {{/each}}
            </div>
        </div>

        <!-- Right Column -->
        <div class="dialog-column">
            <h2>Roll Configuration</h2>
            <div class="form-group">
                <label>DC (Optional)</label>
                <div class="form-fields">
                    <input type="number" name="dc" placeholder="DC">
                    <label class="checkbox">
                        <input type="checkbox" name="showDC" checked> Show
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label>Roll Mode</label>
                <div class="form-fields">
                    <select name="rollMode">
                        <option value="roll">Public Roll</option>
                        <option value="gmroll">Private Roll</option>
                        <option value="blindroll">GM Only</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label>Description</label>
                <div class="form-fields">
                    <textarea name="description" rows="2" placeholder="Optional description..."></textarea>
                </div>
            </div>
            <div class="form-group">
                <label>Label</label>
                <div class="form-fields">
                    <input type="text" name="label" placeholder="Roll label">
                </div>
            </div>
            <div class="form-group">
                <label>Dice</label>
                <div class="dice-buttons">
                    <button type="button" class="dice-btn" data-dice="d4">
                        <i class="fas fa-dice-d4"></i>
                    </button>
                    <button type="button" class="dice-btn" data-dice="d6">
                        <i class="fas fa-dice-d6"></i>
                    </button>
                    <button type="button" class="dice-btn" data-dice="d8">
                        <i class="fas fa-dice-d8"></i>
                    </button>
                    <button type="button" class="dice-btn selected" data-dice="d20">
                        <i class="fas fa-dice-d20"></i>
                    </button>
                    <button type="button" class="dice-btn" data-dice="d100">
                        <i class="fas fa-dice-d20"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="dialog-buttons">
        <button class="dialog-button" data-button="roll">
            <i class="fas fa-dice-d20"></i>
            Request Roll
        </button>
        <button class="dialog-button" data-button="cancel">
            <i class="fas fa-times"></i>
            Cancel
        </button>
    </div>
</div>

