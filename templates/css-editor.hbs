{{!-- ----- WRAPPER ----- --}}

<form class="css-editor-form">
    <div class="search-toolbar">
        <div class="search-controls">
            <div class="search-input-group">
                <input type="text" class="search-input" placeholder="Find..." data-tooltip="Ctrl+F">
                <input type="text" class="replace-input" placeholder="Replace..." data-tooltip="Ctrl+H">
            </div>
            <div class="search-buttons">
                <button type="button" class="find-prev-button" data-tooltip="Find Previous (Shift+Enter)">
                    <i class="fas fa-caret-left"></i>
                </button>
                <button type="button" class="find-next-button" data-tooltip="Find Next (Enter)">
                    <i class="fas fa-caret-right"></i>
                </button>
                <button type="button" class="replace-button" data-tooltip="Replace">
                    <i class="fas fa-arrows-repeat-1"></i>
                </button>
                <button type="button" class="replace-all-button" data-tooltip="Replace All">
                    <i class="fas fa-arrows-repeat"></i>
                </button>
            </div>
        </div>
    </div>
    <div class="editor-container">
        <textarea name="css" rows="20">{{css}}</textarea>
    </div>
    <div class="toolbar">
        <div class="toolbar-controls">
            <button type="submit" class="apply-button">
                <i class="fas fa-paint-brush"></i>
                APPLY STYLES
            </button>
            <div class="right-controls">
                <div class="toggle-controls">
                    <label class="transition-toggle">
                        <input type="checkbox" name="transition" {{#if transition}}checked{{/if}}>
                        Smoothing
                    </label>
                    <label class="dark-toggle">
                        <input type="checkbox" name="dark" {{#if dark}}checked{{/if}}>
                        Dark Mode
                    </label>
                </div>
                <div class="utility-buttons">
                    <div class="button-group">
                        <button type="button" class="copy-button" data-tooltip="Copy CSS">
                            <i class="fas fa-copy"></i>
                        </button>
                        <button type="button" class="clear-button" data-tooltip="Clear Editor">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                    <div class="button-group">
                        <button type="button" class="settings-button" data-tooltip="Open Settings">
                            <i class="fas fa-cog"></i>
                        </button>
                        <button type="button" class="world-button" data-tooltip="Open World Settings">
                            <i class="fa-solid fa-earth-asia"></i>
                        </button>
                    </div>
                    <div class="button-group">
                        <button type="button" class="refresh-button" data-tooltip="Refresh Browser">
                            <i class="fas fa-sync-alt"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form> 
