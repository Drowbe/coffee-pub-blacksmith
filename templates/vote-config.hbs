<div class="vote-config-content">
    <div class="vote-types">
        {{#each fixedVoteTypes}}
            <div class="vote-type" data-type="{{this.id}}">
                <div class="vote-type-header">
                    <i class="fas {{this.icon}}"></i>
                    <span class="vote-type-name">{{this.name}}</span>
                </div>
                <div class="vote-type-description">
                    {{this.description}}
                </div>
            </div>
        {{/each}}
    </div>
</div> 