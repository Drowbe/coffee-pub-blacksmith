{{!-- Roll Configuration Window Template --}}
<div class="roll-dialog foundry-style-window">
  {{!-- Unified Header --}}
  {{> "partial-unified-header" 
      diceIcon=diceIcon
      mainTitle=rollTitle
      subtitle=rollSubtitle
      rollMode=rollMode
      dcValue=dcValue
      isReadOnly=true
      showToggles=false
      actorName=actorName
  }}
  
  <div class="roll-summary-row">
    <div class="roll-summary-item"><span class="label">Formula</span><span class="roll-formula">{{rollFormula}}</span></div>
  </div>
  
  <div class="roll-body-scroll">
    <div class="roll-section">
      <div class="roll-section-header"><i class="fas fa-cog"></i> Roll Configuration</div>
      
      <div class="roll-config-grid">
        <div class="roll-config-item">
          <label class="roll-config-label">Situational Bonus</label>
          <input type="number" class="roll-situational-bonus" name="situational-bonus" value="" min="-20" max="20" placeholder="An addtional bonus, e.g. +1, 2, -1, etc.">
        </div>
        
        <div class="roll-config-item">
          <label class="roll-config-label">Custom Modifier</label>
          <input type="text" class="roll-custom-modifier" name="custom-modifier" placeholder="e.g., +2 for cover">
        </div>
      </div>
    </div>



    <div class="roll-section">
      <div class="roll-section-header"><i class="fas fa-info-circle"></i> Roll Details</div>
      
      <div class="roll-details-grid">
        <div class="roll-detail-item">
          <span class="detail-label">Base Roll:</span>
          <span class="detail-value">{{baseRoll}}</span>
        </div>
        <div class="roll-detail-item">
          <span class="detail-label">Ability Modifier:</span>
          <span class="detail-value">{{abilityMod}}</span>
        </div>
        <div class="roll-detail-item">
          <span class="detail-label">Proficiency:</span>
          <span class="detail-value">{{proficiencyBonus}}</span>
        </div>
        <div class="roll-detail-item">
          <span class="detail-label">Other Modifiers:</span>
          <span class="detail-value">{{otherModifiers}}</span>
        </div>
      </div>
    </div>
  </div>
  
  <div class="roll-footer">
    <button type="button" class="roll-btn roll-disadvantage"><i class="fas fa-circle-minus"></i> Disadvantage</button>
    <button type="button" class="roll-btn roll-normal"><i class="fas fa-dice-d20"></i> Normal</button>
    <button type="button" class="roll-btn roll-advantage"><i class="fas fa-circle-plus"></i> Advantage</button>
  </div>
</div>
