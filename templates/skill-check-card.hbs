{{#unless hideHeader}}
<div class="dnd5e chat-card item-card" data-actor-id="{{actorId}}">
    <header class="card-header flexrow">
        <img src="icons/svg/d20-grey.svg" title="{{skillName}} Check" width="36" height="36"/>
        <h3 class="item-name">{{skillName}} Check</h3>
    </header>

    <div class="card-content">
        {{#if dc}}<p><strong>DC {{dc}}</strong></p>{{/if}}
        {{#if description}}<p>{{description}}</p>{{/if}}
        
        <div class="skill-check-buttons">
            {{#each actors}}
            <div class="skill-check-actor">
                {{#if this.result}}
                    <div class="roll-result">
                        <span class="actor-name">{{this.name}}</span>
                        <span class="roll-total" title="{{this.result.formula}}">{{this.result.total}}</span>
                    </div>
                {{else}}
                    <button class="skill-roll" data-actor-id="{{this.id}}" data-skill="{{../skillAbbr}}" data-type="{{../rollType}}" data-value="{{../rollValue}}">
                        <i class="fas fa-dice-d20"></i> {{this.name}}
                    </button>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
</div>
{{/unless}} 