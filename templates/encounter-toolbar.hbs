  <div class="encounter-toolbar-compact">
    <div class="encounter-toolbar-header">
      <span class="encounter-toolbar-title">Encounter Tools</span>
      <div class="encounter-badges">
        {{#if partyCR}}
        <span class="cr-badge party-cr" data-tooltip="Party CR">
          PARTY CR: {{partyCR}}
        </span>
        {{/if}}
        {{#if monsterCR}}
        <span class="cr-badge monster-cr" data-tooltip="Monster CR">
          MONSTER CR: {{monsterCR}}
        </span>
        {{/if}}
        {{#if difficulty}}
        <span class="difficulty-badge {{difficultyClass}}" data-tooltip="Encounter Difficulty: {{difficulty}}">
          {{difficulty}}
        </span>
        {{/if}}
      </div>
    </div>

    {{#if hasEncounterData}}
      <div class="encounter-toolbar-actions">
        {{#if hasMonsters}}
        <button class="encounter-btn deploy-monsters">
          <i class="fas fa-dragon"></i>
        </button>
        {{/if}}

        <button class="encounter-btn create-combat">
          <i class="fas fa-swords"></i>
        </button>
      </div>
    {{else}}
      <p>No encounter data found in this journal entry.</p>
    {{/if}}
  </div>
